@model IList<string>
@{    
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/docs/labels.js"></script>

<table id="grid" style=" width: 100%;" border="0" cellpadding="0" cellspacing="0" class="table table2">
    <!-- 正常显示 -->
    <tr>        
        <th style="width:50px">序号</th>
        <th style="width:120px">标签名</th>
        <th style="width:80px">标签类型</th>
        <th style="width:160px" class="wBreak">配置信息</th>
        <th style="width:80px" class="wBreak">控件信息</th>
        <th style="width:50px">操作</th>
    </tr>
    @foreach (var item in Model)
    {
      <tr>
        <th style="width:50px">序号</th>
        <th style="width:120px">@item</th>
        <th style="width:80px">标签类型</th>
        <th style="width:160px" class="wBreak">配置信息</th>
        <th style="width:80px" class="wBreak">控件信息</th>
        <th style="width:50px">操作</th>
    </tr>
    }
 
    <!-- mode为提供复制的模版,此模版复制后id修改为trLabel_(id) -->
    <tr id="model" style="display:none">
        <td id="tdCONFIG_CONTENT" style="display:none"></td>
        <td id="tdLabelType" style="display:none"></td>
        <td id="tdNumber"></td>
        <td id="tdLabelName" style="word-break: break-all; word-wrap: break-word;"></td>
        <td id="tdLabelTypeName"></td>
        <td style="word-break: break-all; word-wrap: break-word;" id="tdConfigInfo"></td>
        <td style="word-break: break-all; word-wrap: break-word;" id="tdControlInfo"></td>
        <td id="tdOpreation" style="word-break: break-all; word-wrap: break-word;"></td>
    </tr>
    <!-- trLabel_ -->
</table>

<div>
    <!-- label type ----- begin -->
    <div class="search" style="margin-top:10px;">
        <ul class="oh">
            <li style="width:35%"><p class="tc">标签名</p><input id="LabelName" type="text" class="fl box_text" style="width:50%;" /></li>
            <li style="width:45%">
                <p class="tc">标签类型</p>
                @Html.EnumDropDownList("LabelType", BuildDoc.LabelType.TextLabel, null, new { })               
            </li>
            @*<li style="width:20%;"><a class="fl mblue_bg white tc" href="javascript:StructureClass.AlertDataLabel()">类似于</a></li>*@
            @*<li style="width:15%;*width:14%;"><a class="fl gray_bg white tc">取消</a></li>*@
        </ul>
    </div>
    <!-- label type ----- end -->

    <!-- label value ----- begin -->
    <div class="oh" style=" border-bottom: 1px solid #ccc; margin-top: 0;">
        <h2 class="fl" style="line-height: 40px; ">取值方式</h2>
    </div>
    <div id="div_Lable" class="Vsearch" style="padding-top:10px;">
        <div id="LabelType_Label">
            <div id="AllTypeLabel">
                <ul class="oh">
                    @Html.EnumDropDownList("GetDataMethod", BuildDoc.GetDataMethod.Const, null, new { })
                    @* 常量 *@
                    <li name="GetDataMethod_Const">
                        <p class="tc">
                            值:
                        </p>
                        <textarea id="GetDataMethod_Const_Value" class="fl box_text" style="width:270px; height:40px"></textarea>
                    </li>

                    @* 公式 *@
                    <li name="GetDataMethod_Formula" style="height: 54px; width: 370px;">
                        <p class="tc" style="padding-top:30px">
                            值:
                        </p><span class="red">注意：@@符号后请保留空格,如：“@@建筑面积 ”</span>
                        <input id="GetDataMethod_Formula_Value" class="fl box_text" style="width:270px " title="" /><span class="red">*</span>
                        <span><a onclick="AlertDiv('#alert_FormulaFormart', 999999)">选择</a></span>
                    </li>

                    @* 数据源 *@
                    <li name="GetDataMethod_Source">
                        <p class="tc">
                            数据源:
                        </p><select id="GetDataMethod_Source_DataSourceName" class="box_text fl">
                            <option value="">-请选择-</option>

                        </select><span class="red">*</span>
                    </li>

                    <li name="GetDataMethod_Source">
                        <p class="tc">
                            显示字段:
                        </p><select id="GetDataMethod_Source_FieldName" class="box_text fl"><option value="">请先选择数据源</option></select><span class="red">*</span>
                    </li>

                    <li name="GetDataMethod_Source">
                        <p class="tc">
                            筛选字段:
                        </p><select id="GetDataMethod_Source_FilterFieldName" class="box_text fl">
                            <option value="">请先选择数据源</option>
                        </select>
                    </li>
                 
                    <li name="GetDataMethod_Source">
                        <p class="tc">
                            筛选操作:
                        </p><select id="GetDataMethod_Source_FilterOperation" class="box_text fl">
                            <option value="">-请选择-</option>
                            <option value="=">等于</option>
                            <option value=">">大于</option>
                            <option value="<">小于</option>
                            <option value="!=">不等于</option>
                        </select>
                    </li>

                    <li name="GetDataMethod_Source">
                        <p class="tc">
                            筛选值:
                        </p><input id="GetDataMethod_Source_FilterValue" type="text" class="fl box_text" />
                    </li>

                    @* 表格标签 *@
                    <li name="GetDataMethod_Source_TableLabel_FillType">
                        <p class="tc">
                            填充方式:
                        </p><select id="GetDataMethod_Source_TableLabel_FillType" class="box_text fl">
                        <option value="OnlyFillByRow">横向</option><option value="OnlyFillByColumn">纵向</option></select>
                    </li>

                    <li name="GetDataMethod_Source_TableLabel_From" style="line-height:25px">
                        <p class="tc">
                            从第
                        </p><input id="GetDataMethod_Source_TableLabel_From" type="text" value="4" class="fl box_text" />条数据开始
                    </li>

                    <li name="GetDataMethod_Source_TableLabel_To" style="line-height:25px">
                        <p class="tc">
                            到第
                        </p><input id="GetDataMethod_Source_TableLabel_To" type="text" value="4" class="fl box_text" />条数据结束
                    </li>

                </ul>

            </div>
            
        </div>
    </div>
    <!-- label value ----- end -->

</div>